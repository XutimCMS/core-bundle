<div class="reference-diff">
    <div class="small text-muted mb-3">
        {{ 'Comparing reference at'|trans({}, 'admin') }}
        <strong>{{ oldRevision.recordedAt|date('d M Y H:i') }}</strong>
        {{ 'with current version'|trans({}, 'admin') }}
    </div>

    <div class="mb-3">
        <label class="form-label fw-bold">{{ 'Intro title'|trans({}, 'admin') }}</label>
        <div class="p-2 bg-light rounded">{{ preTitleDiff|raw }}</div>
    </div>

    <div class="mb-3">
        <label class="form-label fw-bold">{{ 'Title'|trans({}, 'admin') }}</label>
        <div class="p-2 bg-light rounded">{{ titleDiff|raw }}</div>
    </div>

    <div class="mb-3">
        <label class="form-label fw-bold">{{ 'Subtitle'|trans({}, 'admin') }}</label>
        <div class="p-2 bg-light rounded">{{ subTitleDiff|raw }}</div>
    </div>

    <div class="mb-3">
        <label class="form-label fw-bold">{{ 'Description'|trans({}, 'admin') }}</label>
        <div class="p-2 bg-light rounded">{{ descriptionDiff|raw }}</div>
    </div>

    <div class="mb-3">
        <label class="form-label fw-bold">{{ 'Content'|trans({}, 'admin') }}</label>
        <div class="mt-2">
            {{ include('@XutimCore/admin/content_fragment/content_diff.html.twig', {rows: contentRows}) }}
        </div>
    </div>
</div>
