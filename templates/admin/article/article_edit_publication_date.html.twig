{% extends '@XutimCore/admin/modalBase.html.twig' %}
{% import '@XutimCore/admin/common/forms.html.twig' as forms %}
{% set title = 'edit publication date'|trans({}, 'admin')|capitalize %}

{% block pageTitle %}
    {{ title }}
{% endblock %}

{% block body %}
    <div class="card">
        <div class="card-header p-3">
            <h3 class="card-title">{{ title }}</h3>
        </div>
        <div class="card-body">
            {{ form_start(form) }}
            {{ form_row(form.publishedAt) }}
            {{ form_row(form.submit) }}
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}

{% block stream_success %}
    <turbo-stream action="replace" targets="#published-at-sidebar-item">
        <template>
            {{
                include('@XutimCore/admin/article/_published_sidebar_item.html.twig', {article: article})
            }}
        </template>
    </turbo-stream>

    <turbo-stream action="replace" targets="#translation-status-item">
        <template>
            {{
                include('@XutimCore/admin/article/_publication_status_sidebar_item.html.twig', {
                    article: article, 
                    translation: translation
                })
            }}
        </template>
    </turbo-stream>
{% endblock %}
