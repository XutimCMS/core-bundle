{% extends '@XutimCore/admin/base.html.twig' %}

{% block pageTitle %}{{
        'Translation revisions'|trans({}, 'admin')|capitalize
    }}{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-md-3">
            {% if (events|length) > 0 %}
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">
                            {{ 'Revisions'|trans({}, 'admin') }}
                        </h3>
                    </div>

                    <div class="px-3 pt-3">
                        <div class="small text-muted mb-1">
                            {{ 'You are comparing'|trans({}, 'admin') }}
                        </div>
                        <div class="d-flex align-items-center gap-2 flex-wrap">
                            <span class="badge bg-secondary text-white">
                                {{ 'Old'|trans({}, 'admin') }} •
                                {{ selectedOld.recordedAt|date('d M Y H:i') }}
                            </span>
                            <span class="text-muted">→</span>
                            <span class="badge bg-primary text-white">
                                {{ 'New'|trans({}, 'admin') }} •
                                {{ selectedNew.recordedAt|date('d M Y H:i') }}
                            </span>
                            <a
                                class="btn btn-outline-secondary btn-sm ms-auto"
                                href="{{ path('admin_content_translation_revisions', {
                                id: translation.id,
                                oldId: selectedNew.id,
                                newId: selectedOld.id,
                            }) }}"
                            >
                                {{ 'Swap'|trans({}, 'admin') }}
                            </a>
                        </div>
                        <hr class="my-2" />
                    </div>

                    <div class="list-group list-group-flush">
                        {% set total = events|length %}
                        {% for event in events %}
                            {%
                                set author = usernames[event.userIdentifier].name is defined ? usernames[event.userIdentifier].name : event.userIdentifier
                            %}
                            <div class="list-group-item d-flex align-items-center gap-2">
                                <div class="text-muted" style="width: 1.5rem">
                                    {{ total - loop.index0 }}
                                </div>
                                <div class="flex-fill">
                                    <div class="fw-semibold">
                                        {{ event.recordedAt|date('d M Y H:i') }}
                                    </div>
                                    <div class="small text-secondary">
                                        {{ author }}
                                    </div>
                                </div>
                                <div
                                    class="btn-group btn-group-sm"
                                    role="group"
                                    aria-label="Choose side"
                                >
                                    <a
                                        class="btn btn-outline-secondary {{ selectedOld.id == event.id ? 'active' }}"
                                        href="{{ path('admin_content_translation_revisions', {
                                            id: translation.id,
                                            oldId: event.id,
                                            newId: selectedNew.id,
                                        }) }}"
                                        title="{{ 'Set as Old'|trans({}, 'admin') }}"
                                    >
                                        {{ 'Old'|trans({}, 'admin') }}
                                    </a>
                                    <a
                                        class="btn btn-outline-primary {{ selectedNew.id == event.id ? 'active' }}"
                                        title="{{ 'Set as New'|trans({}, 'admin') }}"
                                        href="{{ path('admin_content_translation_revisions', {
                                            id: translation.id,
                                            oldId: selectedOld.id,
                                            newId: event.id,
                                        }) }}"
                                    >
                                        {{ 'New'|trans({}, 'admin') }}
                                    </a>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                </div>
            {% else %}
                <div class="alert alert-warning" role="alert">
                    <h4 class="alert-title">No revision</h4>
                    <div class="text-secondary">
                        {{
                            'There is no revision to compare.'|trans({}, 'admin')
                        }}
                    </div>
                </div>
            {% endif %}
        </div>

        <div class="col-md-9">
            <h2>Title</h2>
            {% if titleDiff is defined %}
                {{ titleDiff|raw }}
            {% else %}
                {{ translation.title }}
            {% endif %}

            <h2 class="mt-4">Description</h2>
            {% if descriptionDiff is defined %}
                {{ descriptionDiff|raw }}
            {% else %}
                {{ translation.description }}
            {% endif %}

            <h2 class="mt-4">Content</h2>

            {% if contentRows is defined %}
                {{
                    include('@XutimCore/admin/content_fragment/content_diff.html.twig', {
                        rows: contentRows,
                        locale: content_context_language(),
                    })
                }}
            {% else %}
                {{
                    include('@XutimCore/admin/content_fragment/content.html.twig', {
                        fragments: translation.content,
                        locale: content_context_language(),
                    })
                }}
            {% endif %}
        </div>
    </div>
{% endblock %}
