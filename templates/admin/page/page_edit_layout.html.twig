{% extends '@XutimCore/admin/modalBase.html.twig' %}
{% import '@XutimCore/admin/common/forms.html.twig' as forms %}
{%
    set title = 'edit layout'|trans({}, 'admin')|capitalize ~ ' - ' ~ page.defaultTranslation.title
%}

{% block pageTitle %}
    {{ title }}
{% endblock %}

{% block body %}
    <div class="card">
        <div class="card-header p-3">
            <h3 class="card-title">{{ title }}</h3>
        </div>
        <div class="card-body">
            {{ form_start(form) }}
            {{ form_row(form.layout) }}
            {{ form_row(form.submit) }}
            {{ form_row(form._token) }}
            {{ form_end(form, {render_rest: false}) }}
        </div>
    </div>
{% endblock %}

{% block stream_success %}
    <turbo-stream action="replace" targets="#page-layout-item">
        <template>
            {{
                include('@XutimCore/admin/page/_layout_sidebar_item.html.twig')
            }}
        </template>
    </turbo-stream>
{% endblock %}
