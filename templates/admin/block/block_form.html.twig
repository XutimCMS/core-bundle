{% extends '@XutimCore/admin/base.html.twig' %}

{% block pageTitle %}
    {{
        block is defined ? block.name : 'new block'|trans({}, 'admin')|capitalize
    }}
{% endblock %}

{% block breadcrumbHeader %}
    <twig:Xutim:Admin:Breadcrumbs>
        <li class="breadcrumb-item">
            <a href="{{ path('admin_block_list') }}">Blocks</a>
        </li>
        <li class="breadcrumb-item">New block</li>
    </twig:Xutim:Admin:Breadcrumbs>
{% endblock %}

{% block pageMenu %}
    <twig:Xutim:Admin:PublicPageLink />
    {% if block is defined %}
        <twig:Xutim:Admin:Button
            tag="a"
            variant="nav"
            href="{{ path('admin_block_show', {id: block.id}) }}"
        >
            <twig:Xutim:Admin:Icon name="search" class="me-1" />
            {{ 'Show'|trans({}, 'admin') }}
        </twig:Xutim:Admin:Button>
    {% endif %}
{% endblock %}

{% block body %}
    <div class="card">
        <div class="card-body">{{ form(form) }}</div>
    </div>
{% endblock %}
